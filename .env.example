# Base de données
DATABASE_URL="postgresql://postgres:password@localhost:5432/zoba?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="votre-secret-nextauth-très-sécurisé"

# OAuth Providers
GOOGLE_CLIENT_ID="votre-google-client-id"
GOOGLE_CLIENT_SECRET="votre-google-client-secret"

FACEBOOK_CLIENT_ID="votre-facebook-client-id"
FACEBOOK_CLIENT_SECRET="votre-facebook-client-secret"

# Twilio (pour l'authentification par téléphone)
TWILIO_ACCOUNT_SID="votre-twilio-account-sid"
TWILIO_AUTH_TOKEN="votre-twilio-auth-token"
TWILIO_PHONE_NUMBER="votre-twilio-phone-number"

# OpenAI (pour l'IA)
OPENAI_API_KEY="votre-openai-api-key"

# Supabase (pour le stockage des fichiers)
SUPABASE_URL="votre-supabase-url"
SUPABASE_KEY="votre-supabase-key"
SUPABASE_BUCKET="zoba-uploads"

# Email (pour les notifications)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="user@example.com"
EMAIL_SERVER_PASSWORD="votre-mot-de-passe-email"
EMAIL_FROM="noreply@zoba.app"

# Intégrations de messagerie
WHATSAPP_BUSINESS_API_TOKEN="votre-whatsapp-token"
FACEBOOK_MESSENGER_TOKEN="votre-messenger-token"
INSTAGRAM_API_TOKEN="votre-instagram-token"
TELEGRAM_BOT_TOKEN="votre-telegram-token"
TIKTOK_API_KEY="votre-tiktok-api-key"